{
  "name": "Tab Smart",
  "version": "0.1",
  "description": "Extension to improve the browsing experience",
  "background": {
    "scripts": ["jquery.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "logo.png",
    "default_popup": "popup.html",
    "default_title": "hocus"
  },  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.js", "jquery.modal.min.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions":  [
    "contextMenus",
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },  
  "externally_connectable": {    
    "matches": ["*://*.hocus.io/*", "http://localhost/"]
  },
  "manifest_version": 2
}
